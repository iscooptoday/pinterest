<script language="javascript" type="text/javascript"> 
var maxAmount = 300;
function textCounter(charcount, showCountField) {
    if (charcount.value.length > maxAmount) {
        charcount.value = charcount.value.substring(0, maxAmount);
  } else { 
        showCountField.value = maxAmount - charcount.value.length;
  }
}
</script>















