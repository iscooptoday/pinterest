
      <div class="container">   
          <% @posts.each do |post| %>
          <div class="posts">
             <div class="post-meta">
                 <p style="font-family:tahoma;margin-left:0px;font-size:17px; font-weight:bold;color:#3333D6"><%= post.user.name if post.user %></p></div>

            <h2 style="font-family:Osaka Monospaced;margin-bottom:25px;"><%= post.title %></h2>
             
             <ul style="list-style-type:none;padding: 0px; margin: 0px">
             
             <li style="background-image:url(blueline.gif);background-repeat: no-repeat;background-position: 0px 0px;padding-left: 14px;" > <span> <p style="font-family:Cottonwood;font-size:17px;margin-bottom:25px;"><%= post.summary %>
             </p> </span></li>
             
             <li style="background-image:url(greenline.gif);background-repeat: no-repeat;background-position: 0px 0px;padding-left: 14px;"> <span> <p style="font-family:Cottonwood;font-size:17px;margin-bottom:25px"><%= post.summary2 %>
             </p> </span> </li>
             
             <li style="background-image:url(redline.gif);background-repeat: no-repeat;background-position: 0px 0px;padding-left: 14px;"> <span> <p style="font-family:Cottonwood;font-size:17px;margin-bottom:25px"><%= post.summary3 %>
             </p> </span> </li>
             
             </ul>
             
             <p style="font-family:tahoma;color:#7f8c8d;margin-left:0px"> <%= time_ago_in_words(post.created_at) %> ago</p>
             
             <p style=font-size:15px ><%= link_to "Read more", post.source,{:style=>'color:#3333D6;',:class => "css_class"} %></p>

             
              
               
     <hr> 
    </div>
  <% end %>
       



</div>  



