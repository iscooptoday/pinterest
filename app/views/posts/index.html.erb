<!DOCTYPE html>

  
  
         <div class="container">   
           <div class="posts">
            <% @posts.each do |post| %>
            <strong><h2 style="font-family:Alright Sans;color:#2980b9"><%= post.title %></h2></strong>
           <p style="font-family:Open Sans;font-size:17px;"><%= post.summary %></p>
            <p style="color:#95a5a6">  <% post.source %></p>
               <div class="post-meta">
                <p style="font-family:Open Sans;color:#95a5a6"> <%= time_ago_in_words(post.created_at) %> ago.</p>
               <p style="font-family:Open Sans;color:#3498db"> by <%= post.user.name if post.user %></p></div>
      
    </div>
  <% end %>
       
</div>  




