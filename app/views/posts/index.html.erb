<div id="pins">
  <% @posts.each do |post| %>
    <div class="box">
      <%= post.body %>
      <%= post.source %>
      <%= link_to 'Show', post_path(pin) %>
        <%= link_to 'Edit', edit_post_path(pin) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  <% end %>
</div>

