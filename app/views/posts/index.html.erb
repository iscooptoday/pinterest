<!DOCTYPE html>

  
  
         <div class="container">   
           <div class="posts">
            <% @posts.each do |post| %>
            <h2 style="color:blue"><%= post.title %></h2>
           <p style="font-family:Sanvito;font-size:20px;"><%= post.summary %></p>
            <p> source: <%= post.source %></p>
               <div class="post-meta">
                 posted <%= time_ago_in_words(post.created_at) %> ago.
               <strong><p style="color:green"> by <%= post.user.name if post.user %></p></strong></div>
      
    </div>
  <% end %>
       
</div>  




